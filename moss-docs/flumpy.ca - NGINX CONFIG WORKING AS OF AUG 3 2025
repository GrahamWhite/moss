server {
    listen 443 ssl;
    server_name flumpy.ca www.flumpy.ca;

    root /var/www/moss/moss-domain/build;
    index index.html;

    # Serve React frontend
    location / {
        try_files $uri /index.html;
    }

    # ðŸ”¥ Proxy backend API requests
    location /api/ {
        # Handle CORS preflight requests
        if ($request_method = OPTIONS) {
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE' always;
            add_header 'Access-Control-Allow-Headers' 'Origin, Authorization, Content-Type, Accept' always;
            add_header 'Access-Control-Allow-Credentials' 'true' always;
            return 204;
        }

        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

        
    }

    ssl_certificate /etc/letsencrypt/live/flumpy.ca/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/flumpy.ca/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}
